{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "ui",
                "onlyDependOnLibsWithTags": ["domain","facade"]
              },
              {
                "sourceTag": "facade",
                "allowedDependencies": ["domain", "facade", "infrastructure"]
              },
              {
                "sourceTag": "infraestructure",
                "allowedDependencies": ["infrastructure","data"]
              },
              {
                "sourceTag": "data",
                "allowedDependencies": ["data", "domain"]
              },
              {
                "sourceTag": "domain",
                "allowedDependencies": ["domain"]
              },
              {
                "sourceTag": "scope:authentication",
                "onlyDependOnLibsWithTags": ["scope:authentication"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
