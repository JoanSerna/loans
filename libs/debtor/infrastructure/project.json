{
  "name": "debtor-infrastructure",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/debtor/infrastructure/src",
  "prefix": "klym",
  "tags": ["infrastructure","scope:debtor"],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/debtor/infrastructure/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/debtor/infrastructure/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/debtor/infrastructure/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/debtor/infrastructure/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/debtor/infrastructure/**/*.ts",
          "libs/debtor/infrastructure/**/*.html"
        ]
      }
    }
  }
}
